<?xml version="1.0" encoding="utf-8"?>


<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">


    <RelativeLayout
        android:id="@+id/activity_file_manager_rl"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_file_manager_iv_search"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="60dp"
            android:padding="5dp"
            app:srcCompat="@drawable/ic_file_manager_search"
            android:clickable="true"
            android:onClick="searchButton"
            android:focusable="true" />

        <ImageView
            android:id="@+id/activity_file_manager_iv_help"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:padding="5dp"
            android:clickable="true"
            android:onClick="helpButton"
            android:focusable="true"
            app:srcCompat="@drawable/ic_file_manager_help" />
    </RelativeLayout>


    <TableRow>

        <TextView
            android:id="@+id/titleManager"
            android:layout_width="398dp"
            android:layout_height="match_parent"
            android:padding="5dip"
            android:shadowColor="@color/colorShadow"
            android:shadowDy="2"
            android:shadowRadius="4"
            android:textColor="@color/colorGREY"
            android:textSize="18sp"/>
    </TableRow>

    <TableRow>
        <ListView
            android:id="@android:id/list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:drawSelectorOnTop="false"/>
    </TableRow>
</TableLayout>